{
	"name": "df_JOIN",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_for_ADLS_for_input",
						"type": "LinkedServiceReference"
					},
					"name": "srcemployee"
				},
				{
					"linkedService": {
						"referenceName": "ls_for_ADLS_for_input",
						"type": "LinkedServiceReference"
					},
					"name": "sourcedeprtmn"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "ls_for_ADLS_for_input",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "join1"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmployeeNo as short,",
				"          Ename as string,",
				"          Job as string,",
				"          Mgr as string,",
				"          Hiredate as date,",
				"          Salary as double,",
				"          Commission as double,",
				"          DepartmentNo as short",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'datafile',",
				"     folderPath: 'input',",
				"     fileName: 'employee.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> srcemployee",
				"source(output(",
				"          DepartmentNO as short,",
				"          DNAME as string,",
				"          LOC as string",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'datafile',",
				"     folderPath: 'input',",
				"     fileName: 'department.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> sourcedeprtmn",
				"srcemployee, sourcedeprtmn join(srcemployee@DepartmentNo == sourcedeprtmn@DepartmentNO,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 select(mapColumn(",
				"          EmployeeNo,",
				"          Ename,",
				"          Job,",
				"          Mgr,",
				"          Hiredate,",
				"          DepartmentNo = srcemployee@DepartmentNo,",
				"          DepartmentNO = sourcedeprtmn@DepartmentNO,",
				"          LOC,",
				"          DNAME,",
				"          Salary,",
				"          Commission",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'datafile',",
				"     folderPath: 'output/emp_join',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}